{
  "name": "mjml2html-api",
  "version": "1.0.0",
  "description": "API to convert MJML to HTML",
  "author": "Xavier Balloy",
  "license": "MIT",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "nest build",
    "format:check": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:check": "eslint \"{src,test}/**/*.ts\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts"
  },
  "dependencies": {
    "@nestjs/common": "10.0.5",
    "@nestjs/core": "10.0.5",
    "@nestjs/platform-fastify": "10.0.5",
    "@types/mjml": "4.7.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "mjml": "4.14.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.18",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.0.5",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.95",
    "@tsconfig/node18": "18.2.2",
    "@types/express": "4.17.20",
    "@types/node": "18.16.19",
    "@types/supertest": "2.0.14",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "eslint": "8.49.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "prettier": "3.0.3",
    "supertest": "6.3.3",
    "typescript": "5.1.6",
    "unplugin-swc": "1.3.2",
    "vitest": "0.33.0"
  }
}
