{
  "name": "mjml2html-api",
  "version": "1.0.0",
  "description": "API to convert MJML to HTML",
  "author": "Xavier Balloy",
  "license": "MIT",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "nest build",
    "format:check": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:check": "eslint \"{src,test}/**/*.ts\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts"
  },
  "dependencies": {
    "@nestjs/common": "10.3.3",
    "@nestjs/core": "10.3.3",
    "@nestjs/platform-fastify": "10.3.3",
    "@types/mjml": "4.7.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "mjml": "4.14.1",
    "reflect-metadata": "0.1.14",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "10.3.3",
    "@swc/cli": "0.1.64",
    "@swc/core": "1.4.0",
    "@tsconfig/node18": "18.2.2",
    "@types/express": "4.17.21",
    "@types/node": "18.19.15",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "prettier": "3.1.1",
    "supertest": "6.3.3",
    "typescript": "5.3.3",
    "unplugin-swc": "1.4.4",
    "vitest": "0.34.6"
  }
}
